@using Oke_task.Models
@model Country

@{
    ViewBag.Title = "Country List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Country List</h2>
<div>
	<table class="table table-bordered">
		<tr>
			<th>Country ID</th>
			<th>Country Name</th>
			<th>Country Capitol</th>
			<th>Details</th>
		</tr>


		@foreach (var item in Model.Countries) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Capitol)
				</td>
				<td>
					@Html.RouteLink("Details", "SpecificCountry", new { id = item.Id})
				</td>
			</tr>
		}
	</table>
</div>


